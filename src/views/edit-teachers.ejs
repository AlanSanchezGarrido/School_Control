            </div>
          </div>
        </nav>
      </div>
      <div class="row">
        <div class="col-lg-5">
          <div class="card">
            </div>
            <div class="card-body">
              <form action="/api/teachers/updateOne/<%= teachers.teacher_id %>" method="POST">
                <div class="row">
                  <div class="col-lg-6 mb-3">
                    <label for="txt_teachersId" class="form-label">Número de control</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txt_teachersId"
                      name="teacher_id"
                      value="<%= teachers.teacher_id %>"
                      readonly
                    >
                  </div>
                  <div class="col-lg-6 mb-3">
                    <label for="txtName" class="form-label">Nombre</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtName"
                      name="name"
                      value="<%= teachers.name %>"
                      required
                    >
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-6 mb-3">
                    <label for="txtLastName" class="form-label">Apellido Paterno</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtLastName"
                      name="lastname"
                      value="<%= teachers.lastname %>"
                      required
                    >
                  </div>
                  <div class="col-lg-6 mb-3">
                    <label for="txtAge" class="form-label">Edad</label>
                    <input
                      type="number"
                      class="form-control"
                      id="txtAge"
                      name="age"
                      value="<%= teachers.age %>"
                      required
                    >
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-6 mb-3">
                    <label for="txtemail" class="form-label">Correo Electrónico</label>
                    <input
                      type="email"
                      class="form-control"
                      id="txtemail"
                      name="email"
                      value="<%= teachers.email %>"
                      required
                    >
                  </div>
                  <div class="col-lg-6 mb-3">
                    <label for="txtarea" class="form-label">Área de trabajo</label>
                    <input
                      type="text"
                      class="form-control"
                      id="txtarea"
                      name="area"
                      value="<%= teachers.area %>"
                      required
                    >
                  </div>
                </div>

                <div class="row">
                  <div class="col-lg-6 mb-3">
                    <label for="txtSalary" class="form-label">Salario</label>
                    <input
                      type="number"
                      step="0.01"
                      class="form-control"
                      id="txtSalary"
                      name="salary"
                      value="<%= teachers.salary %>"
                      required
                    >
                  </div>
                  <div class="col-lg-6 mb-3">
                    <label for="txtyears" class="form-label">Años de servicio</label>
                    <input
                      type="number"
                      class="form-control"
                      id="txtyears"
                      name="years_of_service"
                      value="<%= teachers.years_of_service %>"
                      required
                    >
                  </div>
                </div>

                <div class="row mt-3">
                  <div class="col-lg-12">
                    <button type="submit" class="btn btn-success me-2">
                      <i class="material-icons align-middle" style="font-size: 18px;">save</i>
                      Guardar Cambios
                    </button>
                    <a href="/api/teachers/getAll" class="btn btn-secondary">
                      <i class="material-icons align-middle" style="font-size: 18px;">cancel</i>
                      Cancelar
                    </a>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>